box = [1, 2, 3, 4, 5, 6, 7, 8, 9]
rbox = ""
turn = 1

for i in box: # This loop turns the list into the grid
    if i % 3 == 0:
        rbox += str(i) + " \f"
    else:
        rbox += str(i) + " "


def play(playerinput):
    global turn, rbox
    if turn % 2 == 0: # Makes sure that player one and two are assigned the right symbol
        mark = "O"
    else:
        mark = "X"
    
    if playerinput in rbox: # This edits the grid as the game moves on 
        rbox = rbox.replace(playerinput, mark)
        print(rbox)
    else:
        print("This choice is either, already taken or invalid.")
        turn -= 1
    return mark, rbox

def win_check():
    win = [1, 2, 3], [4, 5, 6], [7, 8, 9]
    return win

print(win_check())
print(rbox)
while turn <= 9: # This is the game loop
    if turn % 2 == 0:
        player2 = input("Player two, it is your turn, pick a number.")
        if player2 != "":
            play(player2)
            turn += 1
        else:
            print("This choice is either, already taken or invalid.")
    else:
        player1 = input("Player one, it is your turn, pick a number.")
        if player1 != "":
            play(player1)
            turn += 1
        else:
            print("This choice is either, already taken or invalid.")